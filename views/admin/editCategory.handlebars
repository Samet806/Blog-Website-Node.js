<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-contact md-padding">
	<h1 class="text-white text-center">EDIT CATEGORY</h1>
</section>

<!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
	<div class="container">

		<div class="row text-center">
			<div class="col-md-4 offset-md-4">
				<div class="section-header">
					<h2 class="title">Edit Category</h2>
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<form action="/admin/category/{{category.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
					<div class="row ">
						<div class="offset-2 col-md-8">
							{{#if category}}
							<div class="form-group">
								<input class="form-control" name="name" id="name" type="text" value="{{category.name}}"
									required="required"
									data-validation-required-message="Please enter your category name.">
								<p class="help-block text-danger"></p>
							</div>
						</div>
						{{/if}}
					</div>

					<div class="clearfix"></div>
					<div class="col-lg-12 text-center">
						<div id="success"></div>
						<button class="main-btn" type="submit">Edit Category</button>
					</div>
			</div>
			</form>
		</div>
	</div>

	</div>
</section>