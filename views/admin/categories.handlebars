<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-about md-padding">
    <h1 class="text-white text-center">CATEGORIES</h1>
</section>

<!--==========================
    ABOUTUS Section
============================-->
<section id="aboutus" class="md-padding">
    <div class="container">
        {{> admin-nav}}
        <div class="clearfix mt-5"></div>
        <div class="row">
            <div class="col-md-4">
                <form action="/admin/categories" method="POST" >

                    <div class=" col-md-10">

                        <div class="form-group">
                            <input class="form-control" name="name" id="name" type="text" placeholder="Category* "
                                required="required" data-validation-required-message="Please enter your category name.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-10 ">
                        <div id="success"></div>
                        <button class="main-btn" style="margin-left: 0;" type="submit">Add Category</button>
                    </div>

                </form>
            </div>
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>NAME</th>
                            <th>DELETE</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                        <tr>
                            <td style="cursor: pointer;">{{_id}}</td>
                            <td style="cursor: pointer;">{{name}}</td>
                            <td style="cursor: pointer;">
                                <form action="/admin/categories/{{id}}?_method=DELETE" method="post">
                                 
                                    <button type="submit" class="btn btn-danger">DELETE</button>
                                </form>
                            </td>
                        </tr>
                       
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</section>